<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'users/usertemplete', user: @user %>
    <%= render 'books/booktemplete', book: @book %>
  </div>

<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

  <thead>
    <tr>
      <th></th>
      <th>本のタイトル</th>
      <th>感想</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |book| %>
      <tr>

         <td>
             <%= link_to user_path(@user.id) do %>
           <div><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></div>
             <% end %>
        </td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
          <% end %>
        </tr>
  </tbody>
</table>
</div>
</div>